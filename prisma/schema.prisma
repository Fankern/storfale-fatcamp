generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  displayName  String
  goalWeight   Float?
  createdAt    DateTime @default(now())

  weighIns     WeighIn[]
}

model WeighIn {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      DateTime
  weight    Float
  createdAt DateTime @default(now())

  @@index([userId, date])
}
